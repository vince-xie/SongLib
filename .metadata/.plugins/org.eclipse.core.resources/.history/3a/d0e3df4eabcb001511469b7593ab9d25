package view;

import javafx.scene.control.Button;
import javafx.scene.control.ButtonBar.ButtonData;
import javafx.scene.control.ButtonType;
import javafx.scene.control.ChoiceBox;
import javafx.scene.control.Dialog;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.layout.GridPane;

public class ImageEffectInputDialog extends Dialog {

    private ButtonType ok = new ButtonType("Ok", ButtonData.OK_DONE);
    private ButtonType cancel = new ButtonType("Cancel", ButtonData.CANCEL_CLOSE);

    public ImageEffectInputDialog(String title) {
        setTitle(title);
        setHeaderText(null);

        GridPane dPane = new GridPane();
        Label songname = new Label("Song: ");
        Label artistname = new Label("Artist: ");
        TextField offsetXText = new TextField();
        TextField offsetYText = new TextField();
        dPane.setHgap(7D);
        dPane.setVgap(8D);

        GridPane.setConstraints(songname, 0, 0);
        GridPane.setConstraints(artistname, 0, 1);
        GridPane.setConstraints(offsetXText, 1, 0);
        GridPane.setConstraints(offsetYText, 1, 1);

        dPane.getChildren().addAll(songname, artistname, offsetXText, offsetYText);
        getDialogPane().getButtonTypes().addAll(ok, cancel);
        getDialogPane().setContent(dPane);
    }
}